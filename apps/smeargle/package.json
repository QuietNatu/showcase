    "@types/react": "18.2.33",
    "@types/react-dom": "18.2.14",
    "@vitejs/plugin-react-swc": "3.4.1",
    "@vitest/coverage-v8": "0.34.6",
    "jsdom": "22.1.0",
    "msw": "1.2.2",
