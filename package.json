{
  "name": "showcase",
  "private": true,
  "license": "MIT",
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "turbo run format && pnpm run format:stylelint && pnpm run format:prettier",
    "format:prettier": "prettier . --write",
    "format:stylelint": "stylelint --fix '{apps,packages}/*/src/**/*.{css,scss}'",
    "lint": "turbo run lint && pnpm lint:lslint && pnpm lint:stylelint && pnpm run lint:prettier",
    "lint:eslint": "turbo run lint",
    "lint:lslint": "ls-lint",
    "lint:prettier": "prettier . --check",
    "lint:stylelint": "stylelint '{apps,packages}/*/src/**/*.{css,scss}' 'packages/styles/dist/**/*.{css,scss}'",
    "preflight-check": "node scripts/preflight-check.ts",
    "prepare": "husky",
    "renovate:validate": "pnpm dlx --package=renovate -- renovate-config-validator",
    "storybook": "turbo run storybook",
    "storybook:build": "turbo run storybook:build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@ls-lint/ls-lint": "2.3.1",
    "@natu/browserslist-config-shared": "workspace:^",
    "@natu/tsconfig": "workspace:*",
    "@types/node": "24.10.2",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "playwright": "1.57.0",
    "prettier": "3.7.4",
    "stylelint": "16.26.1",
    "stylelint-config-css-modules": "4.5.1",
    "stylelint-config-standard-scss": "16.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.8.0",
    "stylelint-gamut": "1.3.4",
    "stylelint-no-unsupported-browser-features": "8.0.5",
    "stylelint-order": "7.0.0",
    "stylelint-plugin-logical-css": "1.2.3",
    "stylelint-scss": "6.13.0",
    "turbo": "2.6.3",
    "vitest": "4.0.15"
  }
}
