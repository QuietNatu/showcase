{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["CI", "PORT", "VITE_E2E"],
  "pipeline": {
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@natu/styles#build": {
      "outputs": ["scss/tokens/**", "ts/tokens/**"]
    },
    "lint": {},
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test-watch": {
      "cache": false,
      "persistent": true
    },
    "analyse": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "storybook": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    },
    "vrt": {
      "dependsOn": ["build-storybook"],
      "outputs": ["vrt/report/**", "vrt/results/**", "vrt/screenshots/**"]
    },
    "vrt-update": {
      "dependsOn": ["build-storybook"],
      "outputs": ["vrt/report/**", "vrt/results/**", "vrt/screenshots/**"]
    },
    "vrt-show-report": {
      "cache": false
    },
    "e2e": {
      "outputs": ["e2e/report/**", "e2e/results/**"]
    }
  }
}
