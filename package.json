{
  "name": "showcase",
  "private": true,
  "license": "MIT",
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.8.0",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "prettier . --write",
    "lint": "turbo run lint && pnpm lint:ls-lint && pnpm lint:stylelint",
    "lint:lslint": "ls-lint",
    "lint:stylelint": "stylelint '{apps,packages}/*/src/**/*.{css,scss}'",
    "storybook": "turbo run storybook",
    "storybook:build": "turbo run storybook:build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch"
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "2.3.0",
    "@natu/browserslist-config-shared": "workspace:^",
    "prettier": "3.5.3",
    "stylelint": "^16.18.0",
    "stylelint-config-css-modules": "^4.4.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "stylelint-no-unsupported-browser-features": "^8.0.4",
    "stylelint-order": "^6.0.4",
    "stylelint-plugin-logical-css": "^1.2.3",
    "stylelint-scss": "^6.11.1",
    "turbo": "2.5.0"
  }
}
