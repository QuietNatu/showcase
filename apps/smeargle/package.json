{
  "name": "@natu/smeargle",
  "private": true,
  "license": "MIT",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest run --coverage",
    "test-watch": "vitest",
    "analyse": "pnpm build --sourcemap && source-map-explorer dist/assets/**/*.js --html bundle-analysis.html",
    "storybook": "storybook dev -p 6002",
    "build-storybook": "storybook build",
    "preview-storybook": "http-server -c-1 ./storybook-static --silent",
    "vrt": "playwright test --config vrt/playwright.config.ts",
    "vrt-update": "pnpm vrt --update-snapshots",
    "vrt-show-report": "playwright show-report vrt/report --port 6004",
    "e2e": "cross-env VITE_E2E=true playwright test --config e2e/playwright.config.ts",
    "build-dependencies": "pnpm build-api && pnpm build-i18n",
    "build-api": "orval --config ./orval.config.ts",
    "build-i18n": "bundle-i18n --source src/locales/original --destination src/locales/bundle --filename translation"
  },
  "dependencies": {
    "@natu/assets": "workspace:*",
    "@natu/styles": "workspace:*",
    "@natu/ui-react": "workspace:*",
    "@natu/utils": "workspace:*",
    "axios": "1.7.2",
    "clsx": "2.1.1",
    "date-fns": "^3.6.0",
    "i18next": "^23.11.5",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-resources-to-backend": "^1.2.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-i18next": "^14.1.2"
  },
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@mswjs/data": "0.16.1",
    "@natu/bundle-i18n": "workspace:*",
    "@natu/eslint-config-react": "workspace:*",
    "@natu/tsconfig": "workspace:*",
    "@natu/vite-plugin-bundle-i18n": "workspace:*",
    "@natu/vrt": "workspace:*",
    "@playwright/test": "1.44.1",
    "@storybook/addon-a11y": "8.1.5",
    "@storybook/addon-essentials": "8.1.5",
    "@storybook/addon-interactions": "8.1.5",
    "@storybook/addon-links": "8.1.5",
    "@storybook/addon-onboarding": "8.1.5",
    "@storybook/blocks": "8.1.5",
    "@storybook/react": "8.1.5",
    "@storybook/react-vite": "8.1.5",
    "@storybook/test": "8.1.5",
    "@testing-library/react": "15.0.7",
    "@testing-library/user-event": "14.5.2",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react-swc": "3.7.0",
    "@vitest/coverage-v8": "1.5.2",
    "autoprefixer": "10.4.20",
    "browserslist-to-esbuild": "2.1.1",
    "cross-env": "7.0.3",
    "http-server": "14.1.1",
    "jsdom": "24.0.0",
    "msw": "2.3.0",
    "orval": "6.30.2",
    "prettier": "3.2.5",
    "source-map-explorer": "2.5.3",
    "storybook": "8.1.5",
    "type-fest": "4.17.0",
    "typescript": "5.4.5",
    "vite": "5.2.12",
    "vite-plugin-pwa": "0.19.8",
    "vite-plugin-svgr": "4.2.0",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.5.2"
  }
}
