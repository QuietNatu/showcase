{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["CI", "PORT", "DEV", "VITE_E2E"],
  "tasks": {
    "dev": {
      "dependsOn": ["^build", "build-dependencies"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build", "build-dependencies"],
      "outputs": ["dist/**"]
    },
    "@natu/assets#build": {
      "outputs": ["angular/svg/**"]
    },
    "@natu/styles#build": {
      "outputs": ["scss/tokens/**", "ts/tokens/**"]
    },
    "preview": {
      "dependsOn": ["build"],
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build", "build-dependencies"]
    },
    "test": {
      "dependsOn": ["^build", "build-dependencies"],
      "outputs": ["coverage/**"],
      "env": ["PLAYWRIGHT_BROWSERS_PATH"]
    },
    "test-watch": {
      "cache": false,
      "persistent": true
    },
    "analyse": {
      "dependsOn": ["^build", "build-dependencies"],
      "outputs": ["dist/**"]
    },
    "storybook": {
      "dependsOn": ["^build", "build-dependencies"],
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["^build", "build-dependencies"],
      "outputs": ["storybook-static/**"]
    },
    "vrt": {
      "dependsOn": ["build-storybook"],
      "outputs": ["vrt/report/**", "vrt/screenshots/**"],
      "env": ["PLAYWRIGHT_BROWSERS_PATH"]
    },
    "vrt-update": {
      "dependsOn": ["build-storybook"],
      "outputs": ["vrt/report/**", "vrt/screenshots/**"],
      "env": ["PLAYWRIGHT_BROWSERS_PATH"]
    },
    "vrt-show-report": {
      "cache": false
    },
    "e2e": {
      "outputs": ["e2e/report/**"]
    },
    "build-api": {
      "inputs": ["$TURBO_DEFAULT$", "../../openapi.yaml"],
      "outputs": ["src/api/**"]
    },
    "build-dependencies": {},
    "@natu/rotom#build-dependencies": {
      "outputs": ["src/api/**", "src/locales/bundle/**"]
    },
    "@natu/smeargle#build-dependencies": {
      "outputs": ["src/api/**", "src/locales/bundle/**"]
    },
    "lighthouse-mobile": {
      "dependsOn": ["build"],
      "outputs": [".lighthouseci/**", "lighthouse-reports/mobile/**"]
    },
    "lighthouse-desktop": {
      "dependsOn": ["build"],
      "outputs": [".lighthouseci/**", "lighthouse-reports/desktop/**"]
    }
  }
}
