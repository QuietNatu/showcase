{
  "name": "showcase",
  "private": true,
  "license": "MIT",
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@8.6.6",
  "engines": {
    "node": "18.x",
    "pnpm": "8.x"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "pnpm lint-lslint && pnpm lint-prettier && pnpm lint-stylelint && turbo run lint",
    "lint-prettier": "prettier --check {apps,packages}/*/{src,e2e,vrt}/**/*.{js,jsx,ts,tsx,json,css,scss,md}",
    "lint-lslint": "ls-lint",
    "lint-stylelint": "stylelint {apps,packages}/*/src/**/*.{css,scss}",
    "test": "turbo run test",
    "test-watch": "turbo run test-watch --parallel",
    "storybook": "turbo run storybook --parallel",
    "build-storybook": "turbo run build-storybook",
    "vrt": "turbo run vrt --continue",
    "vrt-update": "turbo run vrt-update",
    "vrt-show-report": "turbo run vrt-show-report --parallel"
  },
  "devDependencies": {
    "@commitlint/cli": "18.2.0",
    "@commitlint/config-conventional": "18.1.0",
    "@ls-lint/ls-lint": "2.2.2",
    "@playwright/test": "1.39.0",
    "eslint": "8.52.0",
    "husky": "8.0.3",
    "lint-staged": "15.0.2",
    "prettier": "3.0.3",
    "stylelint": "15.11.0",
    "stylelint-config-css-modules": "4.3.0",
    "stylelint-config-standard-scss": "11.0.0",
    "stylelint-order": "6.0.3",
    "stylelint-scss": "5.3.0",
    "turbo": "1.10.16"
  }
}
