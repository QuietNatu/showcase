{
  "name": "@natu/smeargle",
  "private": true,
  "license": "MIT",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest run --coverage",
    "test-watch": "vitest",
    "analyse": "pnpm build --sourcemap && source-map-explorer dist/assets/**/*.js",
    "storybook": "storybook dev -p 6002",
    "build-storybook": "storybook build",
    "preview-storybook": "http-server -c-1 ./storybook-static --silent",
    "vrt": "playwright test --config vrt/playwright.config.ts",
    "vrt-update": "pnpm vrt --update-snapshots",
    "vrt-show-report": "playwright show-report vrt/report --port 6004",
    "e2e": "cross-env VITE_E2E=true playwright test --config e2e/playwright.config.ts"
  },
  "dependencies": {
    "@natu/assets": "workspace:*",
    "@natu/styles": "workspace:*",
    "@natu/ui-react": "workspace:*",
    "@natu/utils": "workspace:*",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@mswjs/data": "0.16.1",
    "@natu/eslint-config-react": "workspace:*",
    "@natu/tsconfig": "workspace:*",
    "@natu/vrt": "workspace:*",
    "@playwright/test": "1.43.1",
    "@storybook/addon-a11y": "8.0.8",
    "@storybook/addon-essentials": "8.0.8",
    "@storybook/addon-interactions": "8.0.8",
    "@storybook/addon-links": "8.0.8",
    "@storybook/addon-onboarding": "8.0.8",
    "@storybook/blocks": "8.0.8",
    "@storybook/react": "8.0.8",
    "@storybook/react-vite": "8.0.8",
    "@storybook/test": "8.0.8",
    "@testing-library/react": "14.1.2",
    "@testing-library/user-event": "14.5.2",
    "@types/react": "18.2.78",
    "@types/react-dom": "18.2.25",
    "@vitejs/plugin-react-swc": "3.6.0",
    "@vitest/coverage-v8": "1.5.0",
    "autoprefixer": "10.4.19",
    "browserslist-to-esbuild": "2.1.1",
    "cross-env": "7.0.3",
    "http-server": "14.1.1",
    "jsdom": "23.2.0",
    "msw": "2.2.13",
    "source-map-explorer": "2.5.3",
    "storybook": "8.0.8",
    "typescript": "5.3.3",
    "vite": "5.2.8",
    "vite-plugin-pwa": "0.19.8",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.5.0"
  }
}
