{
  "name": "@natu/rotom",
  "private": true,
  "license": "MIT",
  "version": "0.0.0",
  "scripts": {
    "dev": "npm-run-all --parallel dev-bundle-i18n dev-ng",
    "dev-ng": "ng dev",
    "dev-bundle-i18n": "pnpm build-i18n --watch",
    "build": "ng build",
    "preview": "http-server -c-1 dist/browser --silent -o",
    "lint": "eslint --report-unused-disable-directives --no-warn-ignored --max-warnings 0",
    "test": "ng test --code-coverage",
    "test-watch": "ng test --watch --browsers Chrome",
    "analyse": "pnpm build --source-map true --named-chunks true && source-map-explorer dist/**/*.js --html bundle-analysis.html",
    "storybook": "ng run rotom:storybook",
    "build-storybook": "ng run rotom:build-storybook",
    "preview-storybook": "http-server -c-1 ./storybook-static --silent",
    "vrt": "playwright test --config vrt/playwright.config.ts",
    "vrt-update": "pnpm vrt --update-snapshots",
    "vrt-show-report": "playwright show-report vrt/report --port 6104",
    "e2e": "playwright test --config e2e/playwright.config.ts",
    "build-dependencies": "pnpm build-api && pnpm build-i18n",
    "build-api": "orval --config ./orval.config.ts",
    "build-i18n": "bundle-i18n --source src/locales/original --destination src/locales/bundle --filename translation",
    "lighthouse-mobile": "lhci autorun",
    "lighthouse-desktop": "lhci autorun --collect.settings.preset=desktop --upload.outputDir=lighthouse-reports/desktop"
  },
  "dependencies": {
    "@angular/animations": "18.2.8",
    "@angular/common": "18.2.8",
    "@angular/compiler": "18.2.8",
    "@angular/core": "18.2.8",
    "@angular/forms": "18.2.8",
    "@angular/platform-browser": "18.2.8",
    "@angular/platform-browser-dynamic": "18.2.8",
    "@angular/router": "18.2.8",
    "@angular/service-worker": "18.2.8",
    "@natu/assets": "workspace:*",
    "@natu/styles": "workspace:*",
    "@natu/ui-angular": "workspace:*",
    "@natu/utils": "workspace:*",
    "@ngneat/svg-icon": "7.1.6",
    "date-fns": "4.1.0",
    "i18next": "23.15.1",
    "i18next-browser-languagedetector": "8.0.0",
    "i18next-resources-to-backend": "1.2.1",
    "rxjs": "7.8.1",
    "tslib": "2.7.0",
    "zone.js": "0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "18.2.7",
    "@angular-eslint/builder": "18.3.1",
    "@angular-eslint/schematics": "18.3.1",
    "@angular/cli": "18.2.7",
    "@angular/compiler-cli": "18.2.8",
    "@compodoc/compodoc": "1.1.25",
    "@faker-js/faker": "9.0.3",
    "@lhci/cli": "0.14.0",
    "@mswjs/data": "0.16.2",
    "@natu/bundle-i18n": "workspace:*",
    "@natu/eslint-config": "workspace:*",
    "@natu/tsconfig": "workspace:*",
    "@natu/vrt": "workspace:*",
    "@playwright/test": "1.47.2",
    "@storybook/addon-a11y": "8.3.5",
    "@storybook/addon-docs": "8.3.5",
    "@storybook/addon-essentials": "8.3.5",
    "@storybook/addon-interactions": "8.3.5",
    "@storybook/addon-links": "8.3.5",
    "@storybook/angular": "8.3.5",
    "@storybook/blocks": "8.3.5",
    "@storybook/test": "8.3.5",
    "@testing-library/angular": "17.3.1",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jasmine-dom": "1.3.3",
    "@testing-library/user-event": "14.5.2",
    "@types/jasmine": "5.1.4",
    "@types/node": "20.16.10",
    "@types/testing-library__jasmine-dom": "1.3.3",
    "axe-core": "4.10.0",
    "cross-env": "7.0.3",
    "eslint": "9.10.0",
    "http-server": "14.1.1",
    "jasmine-axe": "1.1.0",
    "jasmine-core": "5.2.0",
    "karma": "6.4.4",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.1",
    "karma-jasmine": "5.1.0",
    "karma-spec-reporter": "0.0.36",
    "msw": "2.4.9",
    "npm-run-all2": "6.2.3",
    "orval": "7.1.1",
    "prettier": "3.3.3",
    "source-map-explorer": "2.5.3",
    "storybook": "8.3.5",
    "typescript": "5.5.4"
  }
}
