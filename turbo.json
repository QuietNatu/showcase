{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["CI", "VITE_ENABLE_MOCKING"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "build:api"],
      "outputs": ["dist/**"]
    },
    "build:api": {
      "inputs": ["orval.config.ts", "../../apps/api/openapi.yaml"],
      "outputs": ["src/gen/api/**"]
    },
    "dev": {
      "dependsOn": ["^build", "build:api"],
      "cache": false,
      "persistent": true
    },
    "format": {
      "dependsOn": ["^build", "build:api"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build", "build:api"]
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "dependsOn": ["^build", "build:api"],
      "cache": false,
      "persistent": true
    },
    "storybook:build": {
      "dependsOn": ["^build", "build:api"],
      "outputs": ["storybook-static/**", ".storybook/documentation.json"]
    },
    "storybook:preview": {
      "dependsOn": ["storybook:build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build", "build:api"],
      "outputs": ["coverage/**"],
      "env": ["PLAYWRIGHT_BROWSERS_PATH", "TEST_DEBUG"]
    },
    "test:watch": {
      "dependsOn": ["^build", "build:api"],
      "cache": false,
      "persistent": true
    }
  }
}
